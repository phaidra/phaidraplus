{{!
{
  "name" : "Semantic View Popup",
  "description" : "",
}
}}

   <div class="leaflet-popup  leaflet-zoom-animated"><div class="leaflet-popup-content-wrapper"><div class="leaflet-popup-content" style="width: 440px;"><div class="map-object-view">
        
            <div class="image">
                <img src="{{preview}}" width="" height="" alt="{{label}}">
                <div class="actions">
                   <a href="#" class="tip-top button dark lighter icon icon-full-image full-image" data-options="disable_for_touch:true;hover_delay:1000" title="{{translate 'openImage'}}" data-tooltip></a>
                    <a href="#" class="tip-top button dark lighter icon icon-collection-image collection-image" data-options="disable_for_touch:true;hover_delay:1000" title="{{translate 'addToCollection'}}" data-tooltip></a>
                    <a href="#" class="tip-top button dark lighter icon icon-download-image download-image"  data-options="disable_for_touch:true;hover_delay:1000" title="{{translate 'downloadImage'}}" data-tooltip></a>

                    <a href="#" class="tip-top button dark lighter icon icon-mark-image mark-image right" data-options="disable_for_touch:true;hover_delay:2000" data-title-active="{{translate 'unmarkObject'}}"  data-title="{{translate 'markObject'}}" title="{{translate 'markObject'}}" data-tooltip></a>
                </div>
            </div>
            <div class="content">
                {{#if pid}}
               
                {{/if}}
                <div class="title"><span class="inner">{{title}}</span></div>
                <div class="body"><span class="inner">{{description}}</span></div>
                {{#if isimage}}
                    <div class="author">{{author}}</div>
                {{/if}}

                


            </div>
        
    </div></div></div><div class="leaflet-popup-tip-container"><div class="leaflet-popup-tip"></div></div></div>